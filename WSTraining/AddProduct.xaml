<Window x:Class="WSTraining.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSTraining"
        mc:Ignorable="d"
        Title="AddProduct" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="67" Margin="110,10,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="603" x:Name="name"/>
        <TextBox HorizontalAlignment="Left" Height="67" Margin="110,82,0,0" TextWrapping="Wrap" Text="Catrgory_Id" VerticalAlignment="Top" Width="603" x:Name="CatId"/>
        <TextBox HorizontalAlignment="Left" Height="67" Margin="110,154,0,0" TextWrapping="Wrap" Text="Price" VerticalAlignment="Top" Width="603" x:Name="price"/>
        <TextBox HorizontalAlignment="Left" Height="67" Margin="110,226,0,0" TextWrapping="Wrap" Text="Available" VerticalAlignment="Top" Width="603" x:Name="ava"/>
        <Button Content="Add" HorizontalAlignment="Left" Height="63" Margin="62,361,0,0" VerticalAlignment="Top" Width="699" x:Name="AddButt" Click="AddButt_Click"/>



    </Grid>
</Window>
